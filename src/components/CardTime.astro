---
export interface Props {
  imagem: string;
  integrante: string;
  funcao: string;
}

const { imagem, integrante, funcao } = Astro.props;
---

<article>
    <img src={imagem} alt="integrante da equipe" />
  <div>
    <h3>{integrante}</h3>
    <p>{funcao}</p>
  </div>
</article>

<style>
  article {
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 10px;
    color: var(--textodark);
    box-shadow: 0 0 10px var(--secondary);
    transition: all ease-in-out 200ms;
  }

  article:hover {
    box-shadow: 0 0 10px var(--secondary);
    scale: 1.1;
  }

  article picture img {
   width: auto;
    height: 200px;
  }

  article div {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 1rem;
    border-radius: 30px;
  }

  article div h3 {
    color: var(--accent);
    font-size: 1.4rem;
    font-weight: bold;
  }

  @media only screen and (max-width: 768px) {
    article {
      width: 80vw;
    }

    article img {
      width: 50%;
    }
  }
</style>
