---
import SideMenu from "./SideMenu.astro";
---

<nav>
  <a href="/" class="logo-nav">Commandee</a>
  <ul>
    <!--<li><a href="/lista">Lista</a></li>-->
    <li><a href="/contato">Contato</a></li>
    <li><a href="/sobre">Sobre</a></li>
    <li><a href="/download">Download</a></li>
    <li><a href="/profile">Perfil</a></li>
    <!-- lembrar de apagar depois -->
    <li><a href="/login">Login</a></li>

    <a id="cadastro" role="button" href="/signin"
    class="bg-rose-500 justify-self-end text-white font-medium py-2 px-3 rounded-full"
    >
      Cadastre-se
    </a>
  </ul>
  <SideMenu id="icone-menu" />
</nav>

<style>
  nav {
    position: sticky;
    height: 3rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background-color: transparent;
    backdrop-filter: blur(8px);
    z-index: 1;
  }

  nav a {
    text-decoration: none;
  }

  .logo-nav {
    color: var(--primary);
    font-size: 1.5rem;
    font-weight: bold;
    text-decoration: none;
  }

  :global(#icone-menu) {
    display: none;
    justify-self: flex-end;
  }

  #cadastro {
    transition: all 2s;
  }

  #cadastro:hover {
    background-color: var(--primary)
  }

  nav ul {
    list-style: none;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  nav li {
    color: var(--roxo);
    position: relative;
    margin: 0 1rem;
  }

  nav li::before {
    content: "";
    display: block;
    height: 3px;
    background-color: var(--accent);

    position: absolute;
    bottom: -13px;
    width: 0%;

    transition: all ease-in-out 200ms;
  }

  nav li:hover::before {
    width: 100%;
    color: var(--accent) !important;
  }

  @media (max-width: 768px) {
    nav {
      position: relative;
    }

    .logo-nav {
      font-size: 1.2rem;
    }

    :global(#icone-menu) {
      display: block;
    }
    nav ul {
      display: none;
    }
    nav li {
      display: block;
      margin: 1rem 0;
    }
  }
</style>
