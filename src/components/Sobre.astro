---
import { Image } from "@astrojs/image/components";
export interface Props {
  img: string;
  title: string;
  reverse?: boolean;
}

const { img, title, reverse = false } = Astro.props;
---

<section>
  {
    reverse ? (
      <>
        <picture>
          <Image
            src={img}
            alt="Ilustração"
            width={500}
            height={500}
            format="svg"
          />
        </picture>
        <article>
          <h1>{title}</h1>
          <slot />
        </article>
      </>
    ) : (
      <>
        <article>
          <h1>{title}</h1>
          <slot />
        </article>
        <picture>
          <Image
            src={img}
            alt="Ilustração"
            width={500}
            height={500}
            format="svg"
          />
        </picture>
      </>
    )
  }
</section>

<style>
  section {
    margin: 0;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 1rem;
    text-align: center;
    color: var(--textodark);
    font-size: var(--texto);
  }

  picture {
    width: 50vw;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  picture img {
  }

  article {
    width: 35vw;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }

  article h1 {
    font-size: var(--textoTitulo);
    font-weight: 700;
    text-align: center;
  }

  @media (max-width: 768px) {
    section {
      flex-direction: column;
      justify-content: flex-start;
      align-items: center;
      min-height: 60vh;
    }

    picture {
      width: 85%;
    }

    article {
      width: 85%;
      margin-top: 1rem;
    }
  }
</style>
