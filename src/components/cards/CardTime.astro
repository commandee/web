---
import { Image } from "@astrojs/image/components";

export interface Props {
  imagem: string;
  integrante: string;
  funcao: string;
  twitter: string;
  github: string;
}

const { imagem, integrante, funcao, twitter, github } = Astro.props;
---

<article>
  <picture>
    <Image
      src={imagem}
      alt={`Foto de perfil de ${integrante}`}
      width={160}
      height={160}
      format="webp"
    />
  </picture>
  <p>
    {integrante}
    <span>{funcao}</span>
  </p>
  <hr>
  <ul>
    <li>
      <a href={twitter} target="_blank">
        <Image
          src="/logos/twittercolorido.svg"
          alt="Twitter logo"
          format="svg"
          width={20}
          height={20}
        />
      </a>
    </li>
       <li>
      <a href={github} target="_blank">
        <Image
          src="/logos/githubcolorido.svg"
          alt="GitHub logo"
          format="svg"
          width={20}
          height={20}
        />
      </a>
    </li>

  </ul>
</article>

<style>
  article {
    background: var(--secondary);
    width: 15rem;
    min-height: 300px;
    padding-block: 1rem;
    border: 4px solid var(--primary);
    box-shadow: 0 6px 10px rgba(0, 0, 0, 0.1);
    border-radius: 10px;
    text-align: center;
    color: var(--primary);
    transition: all 0.3s ease;

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-evenly;
    row-gap: 20px;
  }

  article:hover {
    transform: translateY(-10px);
  }

  picture {
    overflow: hidden;
    border-radius: 100%;
    object-fit: cover;
    border: 1px solid var(--primary);
  }

  picture img {
    object-fit: cover;
    object-position: center;
    width: 100%;
    fill: currentColor;
  }

  p {
    font-weight: 600;
    font-size: 18px;
  }

  p span {
    display: block;
    font-weight: normal;
    font-size: 16px;
  }

  ul {
    display: flex;
    justify-content: center;
    column-gap: 2ch;
  }

  hr {
    width: 80%;
    border-color: var(--primary);
  }
</style>
