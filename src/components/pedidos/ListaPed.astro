---
import type { Item, Order } from '@prisma/client';
import CardPed from './CardPed.astro';

export interface Props {
  pedidos: Array<Order & { item: Item }>;
}

const { pedidos } = Astro.props;
---

<ul>
  {pedidos.map((ped) => <CardPed pedido={ped} />)}
</ul>

<style>
  ul {
    display: flex;
    flex-direction: column;
    row-gap: 1rem;
    list-style: none;
  }
</style>
