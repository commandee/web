---
import { getAuth } from "../../server/auth/cookies";
import { Image } from "@astrojs/image/components";

const { username } = getAuth(Astro.cookies);
---

<div class="card">
  <Image
    src="https://picsum.photos/250/250"
    alt="Profile picture"
    width={75}
    height={75}
  />

  <h3>Olá, <b>{username}!</b></h3>

  <hr>

  <div class="buttons">
    <a href="/account/config" class="config">Configurações da conta</a>
    <a href="/api/user/logout" class="logout">Sair</a>
  </div>
</div>

<style>
  h3 {
    text-align: center;
  }

  img {
    margin-inline: auto;
    margin-bottom: 1rem;
    border-radius: 50%;
  }

  a {
    width: 100%;
    padding: 0.5rem;
    text-align: center;
  }

  a:hover {
    border-block: linear-gradient(to right, #eee, #ccc);
    background: #eee;
  }

  a.logout {
    color: red;
  }

  a.logout:hover {
    color: inherit;
    background-color: hsl(0, 100%, 80%);
  }

  .buttons {
    margin-top: 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .card {
    width: 250px;
    background: #fff;
    border: 1px solid #ccc;
    box-shadow: 0 0 10px #ccc;
    padding: 1rem;
  }
</style>
