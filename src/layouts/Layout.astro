---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    min-height: 100vh;
  }

  html {
    font-family: system-ui, sans-serif;
    background-color: var(--background);
    scroll-behavior: smooth;
  }
</style>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Mulish:ital,wght@0,200;0,400;0,500;0,700;0,900;1,200;1,400;1,700;1,900&family=Quicksand:wght@300;400;500;700&display=swap");

  * {
    margin: 0;
    padding: 0;
    inset: 0;
    box-sizing: border-box;
    font-family: "Quicksand", sans-serif;
  }

  :root {
    --textodark: #0b2028;
    --textolight: #f3f9fc;
    --background: #ffffff;
    --primary: #7149c6;
    --secondary: #e3dbf5;
    --accent: #fc2947;

    --textoGrande: 2.3rem;
    --textoTitulo: 1.75rem;
    --texto: 1.1rem;

    --gradient: -webkit-linear-gradient(left, var(--primary), var(--accent));
  }

  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }

  .tituloGradiente {
    text-align: center;
    color: transparent;
    background: var(--gradient);
    font-weight: 700;
    background-clip: text;

  }

  h1.tituloGradiente {
    font-size: var(--textoGrande);
    margin: 1rem;
  }


/*peguei no uiverse.io preguiça de fazer um botão do 0*/
.button {
  position: relative;
  overflow: hidden;
  height: 3rem;
  padding: 0 2rem;
  border-radius: 1.5rem;
  background: var(--accent);
  background-size: 400%;
  color: #fff;
  border: none;
   display: flex;
  align-items: center;
  justify-content: center;

}

.button:hover::before {
  transform: scaleX(1);
}

.button-content {
  z-index: 1;
}

.button::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  transform: scaleX(0);
  transform-origin: 0 50%;
  width: 100%;
  height: inherit;
  border-radius: inherit;
  background: var(--gradient);
  transition: all 0.475s;
}

</style>
