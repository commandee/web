---
import Nav from "../components/Nav.astro";
import Layout from "./Layout.astro";
import Footer from "../components/Footer.astro";
import SideBar from "../components/sidebar/SideBar.astro";

export interface Props {
  title: string;
  hideNav?: boolean;
  hideFooter?: boolean;
}

const { title, hideNav, hideFooter } = Astro.props;
---

<Layout title={title}>
  {hideNav || <header>
    <Nav />
  </header>}

  <SideBar />

  <main>
    <slot />
  </main>

  {hideFooter || <Footer />}
</Layout>

<style is:global>
  body {
    display: flex;
    flex-direction: column;
  }

  body > header {
    position: sticky;
  }

  body > main {
    flex: 1;
  }

  body > footer {
    z-index: 3;
  }
</style>
