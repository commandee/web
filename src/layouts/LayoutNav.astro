---
import Nav from '../components/Nav.astro';
import Layout from './Layout.astro';


export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <Nav />
  <main>
    <slot />
  </main>
  <footer>
    pezinho
  </footer>
</Layout>

<style is:global>
  body {
    display: flex;
    flex-direction: column;
  }

  main {
    flex: 1;
  }

  footer {
    background-color: darkslategray;
    color: white;
    display: grid;
    place-items: center;
    padding-block: 1rem;
  }
</style>
