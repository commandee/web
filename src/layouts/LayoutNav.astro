---
import Nav from '../components/Nav.astro';
import Layout from './Layout.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <Nav />
  <main>
    <slot/>
  </main>
</Layout>

<style>
  :global(body) {
    display: flex;
    flex-direction: column;
  }

  main {
    flex: 1;
  }
</style>
