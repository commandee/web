---
import LayoutFull from "../layouts/LayoutFull.astro";
---


<LayoutFull title="Download" >

<section>
  <aside>
    <img src="/illustrations/download.svg" alt="">
  </aside>

  <article>
    <h1>Baixe Agora!</h1>
    <p>o Commandee</p>

      <div>
        <a href="" role="button" class="button"> <span class="button-content">Download</span></a>
      </div>

  </article>

</section>

</LayoutFull>

<style>

  body{
    background: #fff url("data:image/svg+xml,%3Csvg width='1280' height='433' xmlns='http://www.w3.org/2000/svg'%3E %3Cpath d='M0 0h1280L0 433z' fill='%23E2DAF5' fill-rule='evenodd'/%3E %3C/svg%3E ") top/100% no-repeat fixed;
  }

  section {
    display: flex;
    justify-content: center;
    width: auto;
    gap: 2rem;
    padding: 2rem;

  }
  aside {
    width: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  aside img {
    width: 90%;

  }

  article {
    width: 40%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    padding: 2rem;
  }

  article h1 {
    font-size: 3rem;
    font-weight: 700;
    color: var(--textodark);
    text-align: center;
    flex-wrap: wrap;

  }

  article div {
    display: flex;
    justify-content: center;
    align-items: center;

  }

  article div a{
    background-color: var(--accent);
    padding: 0.8rem 2rem;
    border-radius: 30px;
  }

  article p {
    font-size: 1.5rem;
    margin-bottom: 2rem;
  }



  @media (max-width: 768px) {
    section {
      flex-direction: column;
      gap: 1rem;
    }
    aside {
      width: 100%;
    }

    aside img {
      width: 95%;
    }
    article {
      width: 100%;

    }

    article h1{
      font-size: 2.2rem;
      padding: 0.5rem;

    }

    article p {
      font-size: 1.2rem;
      margin-bottom: 1rem;
    }

  }
</style>

