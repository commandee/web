---
import MainHome from "../components/MainHome.astro";
import LayoutFull from "../layouts/LayoutFull.astro";
---

<LayoutFull title="Commandee">
  <MainHome />
</LayoutFull>

<style>
  main {
    background-color: var(--background);
  }

  section {
    flex-wrap: wrap;
    padding: 1.5rem;
    margin-bottom: 3rem;
  }

  section div {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  @media only screen and (max-width: 768px) {
    section {
      margin-bottom: 1rem;
    }

    section div {
      flex-direction: column;
    }
  }
</style>
