---
import LayoutNav from "../layouts/LayoutNav.astro";
---

<LayoutNav title="Commandee">
  <section>
    <div class="title">
      <h1 class="text-orange-500 text-5xl font-bold self-start">
        <u>Comman</u>dee
      </h1>
      <p class="text-2xl">Sua comanda digital confiável, rápida e segura.</p>
      <button
        class="bg-purple-400 hover:bg-purple-600 text-white font-bold py-2 px-4 rounded-full"
        >Conheça agora
      </button>
    </div>
    <div class="img"><img src="/imagemComidaHome.png" alt="ilustração" /></div>
  </section>
</LayoutNav>

<style>
  :global(main) {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  section {
    display: flex;
    justify-content: space-around;
    align-items: center;
    height: 100%;
  }

  button {
    margin-inline: 3rem !important;
    padding-block: 1rem !important;
    flex: 1;
  }

  .title {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 1rem;
    padding-inline: 1rem;
  }

  img {
    max-height: 250px;
    aspect-ratio: 1 / 1;
  }

  p {
    font-size: 1.5rem;
    line-height: 1.5;
    text-align: center;
  }

  @media screen and (max-width: 1000px) {
    section {
      flex-direction: column;
      align-items: center;
      margin-top: 2rem;
    }

    .img {
      display: flex;
      justify-content: center;
      align-items: center;
      flex: 1;
    }
  }
</style>
