---
import LayoutNav from "../layouts/LayoutNav.astro";
import MainHome from "../components/MainHome.astro";
//import CardAjuda from "../components/CardAjuda.astro";
//import CardInfo from "../components/CardInfo.astro";
//import CardTime from "../components/CardTime.astro";
//import Titulo from "../components/Titulo.astro";
---

<LayoutNav title="Commandee">
  <MainHome />
</LayoutNav>

<style>
  main {
    background-color: var(--background);
  }

  section {
    flex-wrap: wrap;
    padding: 1.5rem;
    margin-bottom: 3rem;
  }

  section div {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  @media only screen and (max-width: 768px) {
    section {
      margin-bottom: 1rem;
    }

    section div {
      flex-direction: column;
    }
  }
</style>
