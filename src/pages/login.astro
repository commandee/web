---
import FormLogin from "../components/FormLogin.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Login">
  <aside></aside>
  <FormLogin />
</Layout>

<style lang="scss">
  :global(body) {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    place-items: center;
  }

  aside {
    background-image: url("https://picsum.photos/1500");
    background-color: aliceblue;
    height: 100%;
    width: 100%;
    background-size: cover;
    background-position: center;
  }

  @media (max-width: 800px) {
    :global(body) {
      display: flex;
      align-items: center;
      justify-content: center;
      grid: none;
    }

    aside {
      display: none;
    }
  }
</style>
