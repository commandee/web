---
import Layout from "../layouts/Layout.astro";
---

<style>
  .filter-color {
    /*filter: invert(76%) sepia(33%) saturate(1116%) hue-rotate(356deg) brightness(99%) contrast(88%);*/
    filter: invert(79%) sepia(65%) saturate(407%) hue-rotate(337deg)
      brightness(97%) contrast(88%);
  }
  th {
    text-align: left;
  }
  td {
    text-align: right;
  }

  /* Inicio Style container */

  .container {
    display: grid;
    grid-template-columns: 5fr 7fr;
    padding: 2rem;
    text-align: center;
  }

  .coluna-direita {
    align-self: center;
  }

  .coluna-direita h1 {
    margin-bottom: 1rem;
  }

  .coluna-esquerda {
    align-items: center;
    padding: 0rem 2rem;
    flex-direction: column;
  }

  @media screen and (max-width: 768px) {
    .container {
      grid-template-columns: 1fr;
    }

    .coluna-direita {
      align-items: center;
    }

    .coluna-esquerda {
      align-items: center;
    }
  }
  /* Final Style container */
</style>

<Layout title="Profile">
  <div class="container">
    <div class="coluna-esquerda">
      <!-- Inicio Header SideNav -->
      <div class="flex items-center justify-center border-b">
        <div>
          <img
            src="/profile-icon.svg"
            alt="placeholder"
            class="filter-color h-32"
          />
          <span>User@3452</span>
        </div>
      </div>
      <!-- final Header SideNav -->
      <!-- Início Body SideNav -->
      <div class="overflow-y-auto overflow-x-hidden flex-grow">
        <ul class="flex flex-col py-4 space-y-1">
          <!-- Informações do Usuário -->
          <li>
            <a
              href="#"
              class="relative flex flex-row items-center h-11 focus:outline-none hover:bg-gray-50 text-gray-600 hover:text-gray-800 border-l-4 border-transparent hover:border-indigo-500 pr-6"
            >
              <span class="inline-flex justify-center items-center ml-4">
                <img src="/profile-icon2.svg" class="w-5 h-5 filter-color" />
              </span>
              <span class="ml-2 text-sm tracking-wide truncate"
                >Informações do Usuário</span
              >
            </a>
          </li>

          <!-- Seu Restaurante-->
          <li>
            <a
              href="#"
              class="relative flex flex-row items-center h-11 focus:outline-none hover:bg-gray-50 text-gray-600 hover:text-gray-800 border-l-4 border-transparent hover:border-indigo-500 pr-6"
            >
              <span class="inline-flex justify-center items-center ml-4">
                <img
                  src="/fork-n-knife-icon.svg"
                  class="w-5 h-5 filter-color"
                />
              </span>
              <span class="ml-2 text-sm tracking-wide truncate"
                >Seu Restaurante</span
              >
            </a>
          </li>

          <!-- Logout -->
          <li>
            <a
              href="#"
              class="relative flex flex-row items-center h-11 focus:outline-none hover:bg-gray-50 text-gray-600 hover:text-gray-800 border-l-4 border-transparent hover:border-indigo-500 pr-6"
            >
              <span class="inline-flex justify-center items-center ml-4">
                <img src="/logout-icon.svg" class="w-6 h-6 filter-color" />
              </span>
              <span class="ml-2 text-lg font-bold tracking-wide truncate"
                >Logout</span
              >
            </a>
          </li>
        </ul>
      </div>
      <!-- Final Body SideNav-->
    </div>

    <div class="coluna-direita">
      <div>
        <!-- Inicio Primeiro Card -->
        <div
          class="block bg-purple-300 shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] rounded-3xl"
        >
          <div
            class="text-xl border-b-2 text-left px-6 py-3 bg-purple-400 border-neutral-500 rounded-3xl"
          >
            Perfil
          </div>
          <div class="p-6 bg-purple-300">
            <table class="table-auto w-full">
              <tr>
                <th>Nome</th>
                <td>Fulano da Silva</td>
              </tr>
              <tr>
                <th>Nome de Usuário</th>
                <td>User@3452</td>
              </tr>
              <tr>
                <th>Restaurante</th>
                <td>Restaurante X</td>
              </tr>
              <tr>
                <th>Telefone</th>
                <td>19 99999-3333</td>
              </tr>
            </table>
          </div>
        </div>
        <!-- Final Primeiro Card -->
        <!-- Inicio Segundo Card -->
        <div
          class="block bg-purple-300 shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] rounded-b-3xl"
        >
          <div
            class="text-xl border-b-2 text-left px-6 py-3 bg-purple-400 border-neutral-500 rounded-3xl"
          >
            Email
          </div>
          <div class="p-6">
            <table class="table-auto rounded-full w-full">
              <tr>
                <th>E-mail</th>
                <td>enderecoExemplo@gmail.com</td>
              </tr>
            </table>
            <br /><br />
            <div class="text-right">
              <button
                class="bg-orange-400 hover:bg-purple-600 text-white font-medium py-2 px-3 rounded-full"
                name="btnAltDados">Alterar Dados</button
              >
            </div>
          </div>
        </div>
        <!-- Final Segundo Card -->
      </div>
      <!-- Final Coluna Direita-->
    </div>
  </div>
</Layout>
